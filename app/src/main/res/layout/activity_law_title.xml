<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_bg"
    tools:context=".activity.LawTitleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Luáº­t chung"
                android:textColor="#555555"
                android:textSize="24sp" />

            <com.android.Law.spinner.CustomSpinner
                android:id="@+id/spinner_LawTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:dropDownVerticalOffset="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_spinner_lawtitle"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_LawTitle"
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/proB_LawTitle"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ProgressBar>
    </RelativeLayout>


</FrameLayout>